mixin head(title)
  - var title = (title ? title + ' | Mozilla Science Lab' : 'Collaborate | Mozilla Science Lab')
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  meta(name='description', content='Collaborate | Mozilla Science Lab')
  title= title
  meta(name='viewport', content="width=device-width, initial-scale=1")
  link(rel='icon', type='image/ico', href='/static/img/favicon.ico')
  // This can take arguments later and then we can conditionally insert chunks of CSS depending on which page we're on
  link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Fira+Sans:400,300,500,700')
  link(rel='stylesheet', type='text/css', href='//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.css')
  link(rel='stylesheet', type='text/css', href='http://yui.yahooapis.com/pure/0.4.2/pure-min.css ')
  link(rel='stylesheet', type='text/css', href='/static/style.css')
